<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal:"
            android:textSize="30sp"
            android:layout_below="@+id/carbohydrates"
            android:layout_alignLeft="@+id/grams1"
            android:layout_alignStart="@+id/grams1" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein:"
            android:textSize="30sp"
            android:layout_below="@+id/macronutrients"
            android:layout_alignLeft="@+id/macronutrients"
            android:layout_alignStart="@+id/macronutrients" />

        <TextView
            android:id="@+id/macronutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:text="Macronutrients:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrates:"
            android:textSize="30sp"
            android:layout_below="@+id/grams1"
            android:layout_alignLeft="@+id/protein"
            android:layout_alignStart="@+id/protein"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/grams1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goal1"
            android:layout_alignStart="@+id/goal1"
            android:layout_below="@+id/goal1"
            android:text="Grams Left:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/goal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/protein"
            android:layout_alignRight="@+id/protein"
            android:layout_below="@+id/protein"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="Goal:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/grams3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grams Left:"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:layout_marginBottom="19dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal:"
            android:textSize="30sp"
            android:layout_above="@+id/grams3"
            android:layout_alignLeft="@+id/grams2"
            android:layout_alignStart="@+id/grams2" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats:"
            android:textSize="30sp"
            android:layout_above="@+id/textView21"
            android:layout_alignLeft="@+id/carbohydrates"
            android:layout_alignStart="@+id/carbohydrates" />

        <TextView
            android:id="@+id/grams2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grams Left:"
            android:textSize="30sp"
            android:layout_below="@+id/goal2"
            android:layout_alignLeft="@+id/goal2"
            android:layout_alignStart="@+id/goal2" />
    </RelativeLayout>
</LinearLayout>