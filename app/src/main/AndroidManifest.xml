<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group13.behealthy">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />
    <uses-sdk android:minSdkVersion="21"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Select_Plan"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Progress_Dashboard"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Food_Intake"
            android:label="Food Intake"></activity>
        <activity
            android:name=".Personal_Info"
            android:label="Be healthy"></activity>
        <activity
            android:name=".Camera"
            android:label="Camera"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>